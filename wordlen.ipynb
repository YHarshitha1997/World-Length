    "def count(n):\n",
    "    words=n.split(' ')\n",
    "    total_words=len(words)\n",
    "    total_letters=0\n",
    "    for i in range(0,total_words):\n",
    "        total_letters+=len(words[i])\n",
    "    return (\"no. of total words:\"+str(total_words),\" no. of total letters:\"+str(total_letters))\n",
    "    \n",
    "n=input()\n",
    "count(n)"
